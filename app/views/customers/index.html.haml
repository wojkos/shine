%header
  %h1.h2 Customer Search
%section.search-form
  = form_for :customers, method: :get do |f|
    .input-group.input-group-lg
      = label_tag :keywords, nil, class: "sr-only"
      = text_field_tag :keywords, nil,                          
        placeholder: "First Name, Last Name, or Email Address", class: "form-control input-lg"                          
      %span.input-group-btn
        = submit_tag "Find Customers", class: "btn btn-primary btn-lg"
%section.search-results
  %header
    %h1.h3 Results
  -if @customers.present?
    =render partial: "pager", locals: {keywords: @keywords, page: @page}
  %ol.list-group
    - @customers.each do |customer|
      %li.list-group-item.clearfix
        %h3.pull-right
          %small.text-uppercase Joined
          = l customer.created_at.to_date
        %h2.h3
          = customer.first_name
          = customer.last_name
          %small= customer.username
        %h4= customer.email
  -if @customers.present?
    =render partial: "pager", locals: {keywords: @keywords, page: @page}